<h2><%= @restaurant.name %></h2>
<p>address: <%= @restaurant.address %></p>
<p>category: <%= @restaurant.category %></p>
<p>phone number: <%= @restaurant.phone_number%></p>

<p>Reviews:</p>
<ul>
  <% @reviews.each do |review| %>
  <li>
    <%= review.rating %> : <%= review.content %>
  </li>
  <% end %>
</ul>
<p><%= link_to "Add a review", new_restaurant_review_path(@restaurant), {class: "btn btn-primary"} %></p>

<p><%= link_to "Edit", edit_restaurant_path(@restaurant), {class: "btn btn-primary"} %></p>
<p>
  <%= link_to "Delete", restaurant_path(@restaurant),
  method: :delete,
  data: { confirm: "Are you sure?" },
  class: "btn btn-primary" %>
</p>
<p><%= link_to "Back", restaurants_path, {class: "btn btn-primary"} %></p>
